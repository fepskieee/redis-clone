{
  "snapshot": {
    "enabled": true,
    "directory": "./snapshots",
    "filename_prefix": "dump",
    "save_rules": [
      {
        "changes": 1000,
        "seconds": 3600
      },
      {
        "changes": 100,
        "seconds": 300
      },
      {
        "changes": 10,
        "seconds": 60
      }
    ],
    "compression": true,
    "compression_level": 6,
    "max_snapshots": 5,
    "stop_writes_on_save": false,
    "save_on_shutdown": true
  }
}
