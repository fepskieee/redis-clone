{
  "compilerOptions": {
    "module": "ES6",
    "target": "ESNext",
    "strict": true,
    "types": ["vitest", "vitest/globals"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*.mjs", "/redis/**/*.mjs", "tests/*/*.mjs"],
  "exclude": ["node_modules"]
}
